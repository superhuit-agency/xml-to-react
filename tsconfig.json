{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "target": "ES6",
    "outDir": "dist",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
  ]
}